<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:justifyContent="space_between">

        <Button
            android:id="@+id/btn_rich_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="富文本测试" />

        <Button
            android:id="@+id/btn_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="自定义View" />

        <Button
            android:id="@+id/btn_surface_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="SurfaceView" />

        <Button
            android:id="@+id/btn_nested_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="NestedScrollView" />

        <Button
            android:id="@+id/btn_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="引用" />

        <Button
            android:id="@+id/btn_go2_math_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="MathView测试"
            android:transitionName="btnTest" />

        <Button
            android:id="@+id/btn_go2_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="Test测试页面"
            android:transitionName="btnTest" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="View on Gitee:\n
https://gitee.com/actor20170211030627/TestApplication" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:gravity="center"
            tools:text="VersionName: 1.0.0(VersionCode: 1)" />
    </com.google.android.flexbox.FlexboxLayout>
</androidx.core.widget.NestedScrollView>