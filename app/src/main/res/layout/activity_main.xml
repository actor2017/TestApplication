<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.MyCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="50dp">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <!--            android:background="@color/colorAccent"-->
            <!--                <TextView-->
            <!--                    android:layout_width="200dp"-->
            <!--                    android:layout_height="200dp"-->
            <!--                    android:layout_margin="10dp"-->
            <!--                    android:text="sdfsadfasdfsdfsdfdsf" />-->
        </android.support.v7.widget.MyCardView>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rating="3"
            app:mrb_fillBackgroundStars="true"
            app:mrb_indeterminateTint="@color/colorAccent"
            app:mrb_indeterminateTintMode="add"
            app:mrb_progressBackgroundTint="@color/colorPrimary"
            app:mrb_progressBackgroundTintMode="add"
            app:mrb_progressTint="@color/colorPrimaryDark"
            app:mrb_progressTintMode="add"
            app:mrb_secondaryProgressTint="@color/cardview_shadow_start_color"
            app:mrb_secondaryProgressTintMode="add" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="View on Github:\n
    https://github.com/actor20170211030627/TestApplication" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>