<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.MyCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="50dp">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </android.support.v7.widget.MyCardView>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rating="3"
            app:mrb_fillBackgroundStars="true"
            app:mrb_indeterminateTint="@color/colorAccent"
            app:mrb_indeterminateTintMode="add"
            app:mrb_progressBackgroundTint="@color/colorPrimary"
            app:mrb_progressBackgroundTintMode="add"
            app:mrb_progressTint="@color/colorPrimaryDark"
            app:mrb_progressTintMode="add"
            app:mrb_secondaryProgressTint="@color/cardview_shadow_start_color"
            app:mrb_secondaryProgressTintMode="add" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Result"
            android:minHeight="50dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn" />

        <!--
        <Button
            android:id="@+id/btn_scan_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描二维码"
            android:transitionName="btnScanQrScan" />
            -->

        <Button
            android:id="@+id/btn_expandable_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分组的伸缩栏(ExpandableItemAdapter)" />

        <Button
            android:id="@+id/btn_go2_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试页面"
            android:transitionName="btnTest" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="View on Github:\n
    https://github.com/actor20170211030627/TestApplication" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:gravity="center"
            tools:text="VersionName: 1.0.0(VersionCode: 1)" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>