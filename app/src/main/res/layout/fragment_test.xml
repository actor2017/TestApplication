<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestFragment">

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rating="3"
        app:mrb_fillBackgroundStars="true"
        app:mrb_indeterminateTint="@color/colorAccent"
        app:mrb_indeterminateTintMode="add"
        app:mrb_progressBackgroundTint="@color/colorPrimary"
        app:mrb_progressBackgroundTintMode="add"
        app:mrb_progressTint="@color/colorPrimaryDark"
        app:mrb_progressTintMode="add"
        app:mrb_secondaryProgressTint="@color/cardview_shadow_start_color"
        app:mrb_secondaryProgressTintMode="add" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="btn1" />
</FrameLayout>